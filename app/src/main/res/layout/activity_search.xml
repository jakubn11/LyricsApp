<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/searchLinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textSongsListVew"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingBottom="5dp"
        android:text="Písně"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/search_list_view_track"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:divider="@null"
        android:dividerHeight="0dp" />

    <TextView
        android:id="@+id/showMoreSongs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="end"
        android:paddingRight="20dp"
        android:text="Zobrazit všechny skladby"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textArtistListVew"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingBottom="5dp"
        android:text="Písně"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/search_list_view_artist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="0dp" />

    <TextView
        android:id="@+id/showMoreSongs2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="end"
        android:paddingRight="20dp"
        android:text="Zobrazit všechny skladby"
        android:textColor="#000000"
        android:textSize="18sp" />

    </LinearLayout>
